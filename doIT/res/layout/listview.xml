<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/lv_top_control_bar">
		
	</RelativeLayout>
	<LinearLayout android:id="@+id/lv_bottom_control_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:orientation="horizontal">
	        <EditText 
	        	android:id="@+id/lv_addlistedittext"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:hint="New list..."
			    android:layout_weight="1"
				/>
			<Button
				android:id="@+id/lv_addlistbutton"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Add"
			   	
				/>
	</LinearLayout>
			<ListView 
			android:id="@android:id/list"
			android:layout_width="fill_parent" 
		    android:layout_below="@id/lv_top_control_bar" 
			android:layout_above="@id/lv_bottom_control_bar" android:layout_height="wrap_content"/>
	<TextView android:id="@android:id/empty" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/empty_list" android:layout_centerInParent="true"/>
</RelativeLayout>
